@model IEnumerable<AlbumCoverEntity>
@{
    ViewBag.Title = "You Should Check Out This Band";
}



    <div class="row">
        @* trying out bootstrap columns *@
        @* col-md-6 = on tablet sized and larger, let's split the plage in half because 12/6 = 2  *@
        <div class="col-md-4">
            <a asp-controller="App" asp-action="AddRecommendation">Suggest a song</a>
        </div>
        <div class="col-md-4">
            <a asp-controller="App" asp-action="Artists">Find a new band to get into</a>
        </div>
        <div class="col-md-4">
            <p style="text-align:center" >Rock n' Roll</p>
        </div>
    </div>




    <div class="row">
        <div class="col">
        </div>
        <div class="col-md-8">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <div class="top-picks">
                    <h5>Our users' top picks</h5>
                </div>
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    
                    @foreach (AlbumCoverEntity albumCover in Model)
                    {
                        @if (albumCover.Id == Model.First().Id)
                        {
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="@albumCover.Url" alt="@albumCover.Album.Name">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@albumCover.Url" alt="@albumCover.Album.Name">
                            </div>
                        }
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col">
        </div>
        
    </div>
